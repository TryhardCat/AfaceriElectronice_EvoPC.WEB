@model SocketTypeVM

@{
    string action = "";
    if ((bool)ViewBag.IsNew)
        action = "/SocketType/New";
    else
        action = string.Format("/SocketType/Edit/{0}", Model.Id);

}
<html>
<body style="background-color: #ffdb99; ">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 table-round shadow" style="background-color: #420303">

            <br />
            <div style="color:white;">
                <h4>Socket Type</h4>
            </div>
            <br />

            <div class="col-xl-12">
                <input asp-for="Id" hidden />

                <form action="@action" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <br />
                    <div class="row">

                        <div class="col-sm-12 col-lg-6">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <label class="control-label" style="color:white; font-size:15px;">Denumire Socket</label>
                                </div>
                                <div class="col-xs-12 col-sm-6">
                                    <input asp-for="Name" class="form-control" /><br />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @await Html.PartialAsync(@"_CancelSaveBtn.cshtml")
                    </div>

                </form>

            </div>
        </div>
    </div>
    </body>
</html>